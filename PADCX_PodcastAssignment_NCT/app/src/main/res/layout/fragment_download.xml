<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DownloadFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginStart="@dimen/margin_medium_2">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_keyboard_arrow_left_red_24dp"/>
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_your"
                    android:textSize="@dimen/text_heading_1x"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/ivBack"/>
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_shows"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:textSize="@dimen/text_heading_1x"
                    android:textColor="@android:color/black"
                    android:layout_toEndOf="@id/tvTitle"/>
                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_more_horiz_black_24dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <include
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            layout="@layout/content_download"/>
    </LinearLayout>
    <!--<include
        android:id="@+id/vpEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/viewpod_empty"/>-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>