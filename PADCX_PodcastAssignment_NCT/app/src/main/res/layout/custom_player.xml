<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardBackgroundColor="@color/mediaPlayerBgColor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_large">
            <com.padcmyanmar.androidftc.shared.views.components.CustomImageView
                android:id="@+id/ivPodCast"
                android:src="@drawable/placeholder"
                app:cornerRadius="20dp"
                android:layout_marginTop="@dimen/margin_medium_3"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/tvPodcastTitle"
                android:text="Podcast Title"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_toEndOf="@id/ivPodCast"
                android:textSize="@dimen/text_regular_3x"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPodcastDescription"
                android:layout_below="@id/tvPodcastTitle"
                android:text="Podcast Description..."
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:textSize="@dimen/text_regular_2x"
                android:textColor="@color/textColorTertary"
                android:layout_toEndOf="@id/ivPodCast"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivPodCast"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_below="@id/tvPodcastDescription">
                <View
                    android:layout_width="150dp"
                    android:layout_height="28dp"
                    android:id="@id/exo_progress_placeholder"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <TextView
                    android:id="@id/exo_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/progressBarColor"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPodCast"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_marginEnd="@dimen/margin_medium_3">
                <TextView
                    android:id="@+id/tvSpeed"
                    android:text="@string/txt_1x"
                    android:textSize="@dimen/text_regular_3x"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <!--<ImageButton
                    android:id="@id/exo_rew"
                    style="@style/ExoMediaButton.Rewind"/>-->
                <com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.components.CircularProgressBar
                    android:id="@+id/exo_rew"
                    app:darkColor="@android:color/white"
                    app:percentText="15"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium_3"
                    android:layout_marginEnd="@dimen/margin_medium_3"
                    style="@style/ExoMediaButton.Rewind"
                    app:lightColor="@android:color/white"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageButton
                    android:id="@id/exo_play"
                    android:backgroundTint="@color/transparentWhite"
                    app:borderWidth="0dp"
                    android:background="@drawable/rounded_background"
                    style="@style/ExoMediaButton.Play"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:id="@+id/exo_pause"
                    android:backgroundTint="@color/transparentWhite"
                    app:borderWidth="0dp"
                    android:background="@drawable/rounded_background"
                    style="@style/ExoMediaButton.Pause"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <!--<ImageButton
                    android:id="@id/exo_ffwd"
                    style="@style/ExoMediaButton.FastForward" />-->
                <com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.components.CircularProgressBar
                    android:id="@id/exo_ffwd"
                    style="@style/ExoMediaButton.FastForward"
                    android:layout_marginStart="@dimen/margin_medium_3"
                    android:layout_marginEnd="@dimen/margin_medium_3"
                    app:darkColor="@android:color/white"
                    app:percentText="30"
                    app:clockwise="false"
                    app:lightColor="@android:color/white"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_zz"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:textSize="@dimen/text_regular_3x"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <!--<com.padcmyanmar.androidftc.shared.views.components.StraightProgressBar
                android:id="@+id/progressPodcast"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:barPercent="50"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_toEndOf="@id/ivPodCast"
                android:layout_toStartOf="@id/tvRemainTime"
                android:layout_below="@id/tvPodcastDescription"
                app:barColor="@color/progressBarColor"/>
            <TextView
                android:id="@+id/tvRemainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h left"
                android:textColor="@color/progressBarColor"
                android:textSize="@dimen/text_small"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_below="@id/tvPodcastDescription"/>
            <TextView
                android:id="@+id/tvSpeed"
                android:text="@string/txt_1x"
                android:textSize="@dimen/text_regular_3x"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_alignTop="@id/exo_ffwd"
                android:layout_alignBottom="@id/exo_ffwd"
                android:textColor="@android:color/white"
                android:layout_below="@id/ivPodCast"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.components.CircularProgressBar
                android:id="@+id/exo_rew"
                android:layout_below="@id/ivPodCast"
                android:layout_toStartOf="@id/exo_pause"
                app:darkColor="@android:color/white"
                app:percentText="15"
                style="@style/ExoMediaButton.Rewind"
                app:lightColor="@android:color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageButton
                android:id="@+id/exo_pause"
                android:backgroundTint="@color/transparentWhite"
                android:layout_below="@id/ivPodCast"
                app:borderWidth="0dp"
                style="@style/ExoMediaButton.Pause"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@id/exo_play"
                android:backgroundTint="@color/transparentWhite"
                android:layout_below="@id/ivPodCast"
                app:borderWidth="0dp"
                android:layout_toEndOf="@id/exo_pause"
                style="@style/ExoMediaButton.Play"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.components.CircularProgressBar
                android:id="@id/exo_ffwd"
                style="@style/ExoMediaButton.FastForward"
                android:layout_below="@id/ivPodCast"
                android:layout_toEndOf="@id/exo_play"
                app:darkColor="@android:color/white"
                app:percentText="30"
                app:clockwise="false"
                app:lightColor="@android:color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_zz"
                android:textSize="@dimen/text_regular_3x"
                android:layout_alignStart="@id/tvRemainTime"
                android:textColor="@android:color/white"
                android:layout_below="@id/ivPodCast"
                android:layout_alignTop="@id/tvSpeed"
                android:layout_alignBottom="@id/tvSpeed"/>-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>