<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.viewpods.MediaPlayerViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardBackgroundColor="@color/mediaPlayerBgColor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_large">
            <com.padcmyanmar.androidftc.shared.views.components.CustomImageView
                android:id="@+id/ivPodCast"
                android:src="@drawable/placeholder"
                app:cornerRadius="20dp"
                android:layout_marginTop="@dimen/margin_medium_3"
                android:layout_marginStart="@dimen/margin_medium_3"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/tvPodcastTitle"
                android:text="Podcast Title"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignEnd="@id/tvRemainTime"
                android:layout_toEndOf="@id/ivPodCast"
                android:textSize="@dimen/text_regular_3x"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPodcastDescription"
                android:layout_below="@id/tvPodcastTitle"
                android:text="Podcast Description..."
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignEnd="@id/tvRemainTime"
                android:textSize="@dimen/text_regular_2x"
                android:textColor="@color/textColorTertary"
                android:layout_toEndOf="@id/ivPodCast"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.padcmyanmar.androidftc.shared.views.components.StraightProgressBar
                android:id="@+id/progressPodcast"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:barPercent="50"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_toEndOf="@id/ivPodCast"
                android:layout_toStartOf="@id/tvRemainTime"
                android:layout_below="@id/tvPodcastDescription"
                app:barColor="@color/progressBarColor"/>
            <TextView
                android:id="@+id/tvRemainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h left"
                android:textColor="@color/progressBarColor"
                android:textSize="@dimen/text_small"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/margin_medium_3"
                android:layout_below="@id/tvPodcastDescription"/>
            <TextView
                android:id="@+id/tvSpeed"
                android:text="@string/txt_1x"
                android:textSize="@dimen/text_regular_3x"
                android:textColor="@android:color/white"
                android:layout_below="@id/ivPodCast"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvBackward"
                android:text="15"
                android:textSize="@dimen/text_regular_3x"
                android:layout_toEndOf="@id/tvSpeed"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:textColor="@android:color/white"
                android:layout_toStartOf="@id/fabPlay"
                android:layout_alignTop="@id/tvSpeed"
                android:layout_alignBottom="@id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlay"
                android:backgroundTint="@color/transparentWhite"
                android:src="@drawable/ic_pause_white_24dp"
                android:layout_below="@id/ivPodCast"
                app:borderWidth="0dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvForward"
                android:text="30"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_regular_3x"
                android:layout_toStartOf="@id/tvTimer"
                android:textAlignment="center"
                android:layout_toEndOf="@id/fabPlay"
                android:layout_below="@id/ivPodCast"
                android:layout_alignBottom="@id/tvSpeed"
                android:layout_alignTop="@id/tvSpeed"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_zz"
                android:textSize="@dimen/text_regular_3x"
                android:layout_alignStart="@id/tvRemainTime"
                android:textColor="@android:color/white"
                android:layout_below="@id/ivPodCast"
                android:layout_alignTop="@id/tvSpeed"
                android:layout_alignBottom="@id/tvSpeed"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</com.padcmyanmar.androidftc.padcx_podcastassignment_nct.views.viewpods.MediaPlayerViewPod>